{
  "family": "ikoota-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::701333809618:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::701333809618:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "ikoota-api",
      "image": "701333809618.dkr.ecr.us-east-1.amazonaws.com/ikoota-api:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "DB_HOST",
          "value": "ikootadb.cvugpfnl4vcp.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_USER",
          "value": "Petersomond"
        },
        {
          "name": "DB_NAME",
          "value": "ikoota_db"
        },
        {
          "name": "DB_PORT",
          "value": "3306"
        },
        {
          "name": "DB_PASSWORD",
          "value": "TESTfree12"
        },
        {
          "name": "JWT_SECRET",
          "value": "ikoota-super-secret-jwt-key-production"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "S3_BUCKET_NAME",
          "value": "ikoota"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ikoota-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}