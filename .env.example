# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=ikoota
MYSQL_USER=ikoota_user
MYSQL_PASSWORD=ikoota_pass

# Application Environment
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ikoota-uploads

# Agora.io Audio/Video Configuration
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_certificate_here
AGORA_TEMP_TOKEN_EXPIRY=86400

# Voice/Video Masking Configuration
VOICE_MASKING_ENABLED=true
VOICE_PITCH_SHIFT_RANGE=0.8,1.2
VOICE_FORMANT_SHIFT=0.9,1.1
VIDEO_MASKING_ENABLED=true
FACE_MASK_STRENGTH=0.85
AVATAR_OVERLAY_ENABLED=true

# GPU Processing (for advanced masking)
GPU_INSTANCE_ENDPOINT=https://gpu-masking.ikoota.com
GPU_INSTANCE_API_KEY=your_gpu_api_key

# Frontend URLs
PUBLIC_CLIENT_URL=http://localhost
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80

# Production URLs (for deployment)
# PUBLIC_CLIENT_URL=https://your-domain.com
# ALLOWED_ORIGINS=https://your-domain.com